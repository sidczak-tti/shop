{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Transaction</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Shipping_address</th>
                <td>{{ entity.shippingaddress }}</td>
            </tr>
            <tr>
                <th>Billing_address</th>
                <td>{{ entity.billingaddress }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ entity.quantity }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('application_admin_transaction') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('application_admin_transaction_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
