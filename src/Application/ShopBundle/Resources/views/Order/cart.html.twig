{% extends 'ApplicationShopBundle::layout.html.twig' %}

{% block title %}Cart{% endblock %}
{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">    
    	<div class="col-lg-12">
    		<ul class="breadcrumb">
                <li><a href="{{ path('application_shop_start') }}">Start</a></li>
                <li class="active">Cart</li>
            </ul>
    	</div>
    </div>
    <div class="row">
    	<div class="col-lg-12">
    		<form role="form">
    		<div class="table-responsive">
	    		<table class="table table-striped table-hover">
	    			<thead>
	    				<tr>
	    					<th>Product</th>
	    					<th>Quantity</th>
	    					<th>Price</th>
	    					<th>Subtotal</th>
	    					<th></th>
	    				</tr>
	    			</thead>
	    			<tbody>
	    				<tr>
	    					<td>ASUS CP6130</td>
	    					<td><input type="text" class="form-control input-sm text-center" value="1" style="width: 50px;" /></td>
	    					<td>972.00 zł</td>
	    					<td>529.99 zł</td>
	    					<td class="text-right"><a class="btn btn-default btn-sm" href="">Remove</a></td>
	    				</tr>
	    				<tr>
	    					<td>SAMSUNG Series 7 Chronos 14" Notebook</td>
	    					<td><input type="text" class="form-control input-sm text-center" value="2" style="width: 50px;" /></td>
	    					<td>529.99 zł</td>
	    					<td>529.99 zł</td>
	    					<td class="text-right"><a class="btn btn-default btn-sm" href="">Remove</a></td>
	    				</tr>
	    			</tbody>
	    			<tfoot>
	    				<tr class="success">
	    					<th colspan="3">Subtotal</th>
	    					<th colspan="2">2000 zł</th>
	    				</tr>
	    			</tfoot>
	    		</table>
    		</div>
    		</form>
    	</div>
    </div>
    <div class="row">
    	<div class="col-md-6">
    		<a class="btn btn-default" href="{{ path('application_product') }}">Continue Shopping</a>
    		<a class="btn btn-default" href="#">Update basket</a>
    	</div>
    	<div class="col-md-6 text-right">
    		<a class="btn btn-primary" href="#">Proceed to Checkout</a>
    	</div>
    </div>
</div>
                
                
{% if app.session.get('product_cart') %}
<div class="container">
    
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h3>Cart contents</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
	    	<table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                            <th></th>
	    		</tr>
                    </thead>
                    <tbody>
                    {% set subtotal_cart = null %}
                    {% for product in app.session.get('product_cart') %}
                    <tr>
                        <td><a href="{{ path('application_product_show', { 'id': product.id, 'title': product.titleslug }) }}">{{ product.title|raw }}</a></td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.price|number_format(2, '.', ',') }} zł</td>
                        <td>{{ product.subtotal|number_format(2, '.', ',') }} zł</td>
                        <td class="text-right"><a class="btn btn-default btn-sm" href="{{ path('application_product_remove-cart', { 'id': product.id }) }}">Remove</a></td>
                        {% set subtotal_cart = subtotal_cart + product.subtotal %}
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr class="success">
                            <th colspan="3">Subtotal</th>
                            <th colspan="2"> {{ subtotal_cart|number_format(2, '.', ',') }} zł</th>
	    		</tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
    	<div class="col-md-6">
            <a class="btn btn-default" href="{{ path('application_product') }}">Continue Shopping</a>
            <a class="btn btn-default" href="#">Update basket</a>
    	</div>
    	<div class="col-md-6 text-right">
            <a class="btn btn-primary" href="#">Proceed to Checkout</a>
    	</div>
    </div>

</div>
{% else %}
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>You have no items in your shopping cart.</h1>
            <a class="btn btn-lg btn-default" href="{{ path('application_product') }}">Click here to continue shopping</a>
        </div>
    </div>
</div>
{% endif %}
        
{% endblock %}